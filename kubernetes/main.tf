

// Create kubernetes deployment

provider "kubernetes" {
  config_path = "~/.kube/config"
}

resource "kubernetes_deployment" "test" {
  metadata {
    name      = "nginx"
  }
  spec {
    replicas = 2
    selector {
      match_labels = {
        app = "MyTestApp"
      }
    }
    template {
      metadata {
        labels = {
          app = "MyTestApp"
        }
      }
      spec {
        container {
          image = "nginx"
          name  = "nginx-container"
          port {
            container_port = 80
          }
        }
      }
    }
  }
}

